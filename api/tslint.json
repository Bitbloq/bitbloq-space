{
    "extends": [
      "tslint:latest"
    ],
    "linterOptions": {
      "exclude": [
        "node_modules/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js*"
      ]
    },
    "rules": {
      "no-console": false,
      "object-literal-sort-keys": false,
      "no-debugger": false,
      "ter-arrow-parens": false,
      "import-name": false,
      "variable-name": [true, "check-format", "allow-leading-underscore"]
    },
    "jsRules": {
      //Disable for javascript
      "no-console": false,
      "object-literal-sort-keys": false,
      "no-debugger": false
    }
  }